<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HIEDDAZ.UI.MainPage"
             xmlns:p="clr-namespace:HIEDDAZ.UI">

    <Grid RowDefinitions="100,50,50,50,50,*,50,5" ColumnDefinitions="20*,60*,20*">
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" BackgroundColor="#53E478" Padding="24" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label Text="Hoda Ishi!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </StackLayout>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
            <p:PlantItemView/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5">
            <Label Text="GiraSol" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" />
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5">
            <Label Text="Rosa" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" />
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5">
            <Label Text="Cactus" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" />
        </Grid>

        <Button Grid.Row="6" Grid.Column="1" Text="Add Plant" Style="{StaticResource TestButtonStyle}" Clicked="OnCreateClicked"/>
    </Grid>
    

</ContentPage>
